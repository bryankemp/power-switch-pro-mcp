# Power Switch Pro MCP Server - Docker Configuration
# Copy this file to .env and fill in your actual values

# Required: IP address or hostname of your Power Switch Pro device
POWER_SWITCH_HOST=192.168.0.100

# Required: Admin password for your device
POWER_SWITCH_PASSWORD=1234

# Optional: Username (defaults to 'admin')
POWER_SWITCH_USERNAME=admin

# Optional: Use HTTPS instead of HTTP (defaults to 'false')
# Set to 'true' if your device has SSL/TLS enabled
POWER_SWITCH_USE_HTTPS=false

# Optional: HTTP server host binding (defaults to '0.0.0.0')
HOST=0.0.0.0

# Optional: HTTP server port (defaults to '8000')
PORT=8000
